
@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

@foreach (var film in ViewBag.FavouriteFilms)
{

    <div class="form-inline">
        <div class="form-group">
            <h2>@film.Filmname</h2>
        </div>
        <div class="form-group">
            <input type="image" src="~/icons/dislike.png" onclick="location.href='@Url.Action("RemoveFromFavFilms","FavouriteFilms", new { filmname= @film.Filmname })'" />
        </div>
    </div>

}